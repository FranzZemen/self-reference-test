{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2021",
    "rootDir": "ts-src",
    "outDir": "publish/mjs",
    "moduleResolution": "Node",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["ts-src/**/*.ts","ts-src/**/*.cts", "ts-src/**/*.mts"],
  "exclude": [
    "node_modules"
  ]
}

